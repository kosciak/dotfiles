!--< reload .Xdefaults >--!
! $ xrdb -load ~/.Xdefaults

!--< xterm settings >--!
xterm*faceName:         monospace
xterm*faceSize:         9

xterm*internalBorder:   1
xterm*scrollBorder:     1
xterm*Border:           off
xterm*borderWidth:      0

xterm*cursorBlink:      true
xterm*cursorOffTime:    800
xterm*colorMode:        on
xterm*colorBDMode:      off

!--< colors settings >--!
xterm*background:       #fbfbfb
xterm*foreground:       #2e3436

!--< based on gnome-terminal Tango scheme >--!

! black
*color0:                #2e3436
*color8:                #555753
! red
*color1:                #cc0000
*color9:                #ef2929
! green
*color2:                #4e9a06
*color10:               #8ae234
! yellow
*color3:                #c4a000
*color11:               #fce94f
! blue
*color4:                #3465a4
*color12:               #729fcf
! magenta
*color5:                #75507b
*color13:               #ad7fa8
! cyan
*color6:                #06989a
*color14:               #5fe2e2
! white
*color7:                #d3d7cf
*color15:               #eeeeec

